<%= navigation %>
<%= error_messages_for  'shape' %>
<% resource_form @shape, @resource, :new do |form| %>
    <%= hidden_field_tag 'type', params[:type] %>
    <label for="ident">Ident </label>
    <%= text_field :resource, :ident %>
    <label for="description">Description </label>
    <%= text_area :resource, :description %>
    <% if @resource.is_a?(Shapes::Struct) %>
      <%= @resource.presenter.form %>
    <% else %>
      <%= @resource.render :form %>
    <% end %>
    <%= form.submit %>
<% end %>
